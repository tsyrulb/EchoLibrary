@model IEnumerable<Domain.Feedback>

@{
    ViewData["Title"] = "Feedbacks";
}

<style>


    body {
        background: linear-gradient(black, #7F00DF);
        color: white;
        text-align: center;
    }

    h1 {
        margin: 50px auto;
        text-align: center;
        color: white;
        opacity: 0.9;
        font: 700 80px 'Bitter';
    }

    .average {
        margin: 5px auto;
        text-align: center;
        color: white;
        opacity: 1;
        font: 700 30px 'Bitter';
    }

    .table {
        color: white;
    }

    .link {
        color: white;
        text-decoration: none;
    }

        .link:hover {
            color: white;
            text-decoration: none;
        }

    input {
        margin-top: 5px;
    }

    svg {
       margin:5px;
    }

    .link-light {
        margin-top: 20px;
        text-decoration: none;
    }

</style>

<h1>FeedBacks</h1>

@{
    var count = 0;
    var average = 0;
    foreach (var item in Model)
    {
        average += item.Score;
        count += 1;
    }
    if (count!=0)
    {
        average = average / count;
        <p class="average">average is @average</p>
    } else
    {
        <P class="average">be first to give us a score</P> 
    }
}

<a asp-action="Create" class="link">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
    </svg>
    Add Feedback
</a>



<form asp-controller="Feedbacks" asp-action="Search">
    <p>
        <input type="text" name="query" id="search" />
        <button type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search-heart" viewBox="0 0 16 16">
                <path d="M6.5 4.482c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.69 0-5.018Z" />
                <path d="M13 6.5a6.471 6.471 0 0 1-1.258 3.844c.04.03.078.062.115.098l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1.007 1.007 0 0 1-.1-.115h.002A6.5 6.5 0 1 1 13 6.5ZM6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11Z" />
            </svg>
        </button>

    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Score)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="link">
